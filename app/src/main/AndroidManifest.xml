<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hassan.azkarandad3ia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
        <activity android:name=".CatActivity"
            android:configChanges="orientation|screenSize"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".details"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".StoryActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Favourite"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".FavDetail"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".SearchActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchDetails"
            android:configChanges="orientation|screenSize"></activity>
    </application>

</manifest>